---
/**
 * ## AdminPageInfo.astro
 * 
 * A generic component to display information about a page from a key-value object.
 * 
 * @note the entries are reversed to display the most recent at the top.
 * 
 * @action copyToClipboard - copy value to clipboard when clicked
 * 
 */

interface Props {
  data: Record<string, any>
}

const { data } = Astro.props

const entries = Object.entries(data).reverse()

---
<div class="flex flex-col gap-y-2 p-2 flex-grow">
  {
    entries.map(([key, value]) => (
      <div class="flex flex-row gap-x-2 flex-grow items-baseline" onclick={`navigator.clipboard.writeText('${value}')`}>
        <p class="text-xs opacity-80 font-bold font-mono tracking-wide">{key}</p>
        <pre class="text-xs opacity-50">{value}</pre>
      </div>
    ))
  }
</div>
