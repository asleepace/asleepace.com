---
import Spacer from '../astro/Spacer.astro'
import AdminPanelSidebarButton from './AdminPanelSidebarButton.astro'

interface Props {
  activeTab?: number
}

const { activeTab = 0 } = Astro.props

---

<aside class="w-64 bg-black px-2 py-16 pb-4 gap-y-2 flex flex-col text-zinc-300">
  <AdminPanelSidebarButton href="/admin" title="Home" active={activeTab === 0} />
  <AdminPanelSidebarButton href="/admin/system" title="System" active={activeTab === 1} />
  <AdminPanelSidebarButton href="/admin/analytics" title="Analytics" active={activeTab === 2} />
  <Spacer direction="vertical" />
  <AdminPanelSidebarButton href="/logout" title="Logout" variant="destructive" />
</aside>