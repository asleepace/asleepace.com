---
interface Props {
  className?: string
}
---

<script>
  import { defineComponent } from './defineComponent'

  defineComponent({
    tagName: 'app-side-bar',
    state: {
      open: true,
    },
    attach({ open }) {
      console.log('[Sidebar] attached!')
      this.onclick = () => {
        console.log('[SideBar] onclicked called!')
        this.state.open = !open
      }
    },
  })
</script>

<app-side-bar
  rx-open="1"
  className="bg-neutral-800 drop-shadow-md transition-all duration-300 ease-in-out h-full flex flex-col"
>
  <div
    rx-open="1"
    class="[&[rx-open='1']]:bg-red-500 rx-open:bg-blue-500 sticky top-0 p-4 flex justify-between items-center min-h-[60px]"
  >
    <slot name="sidebar-header" />
  </div>
  <slot />
  <slot name="sidebar-footer" />
</app-side-bar>
