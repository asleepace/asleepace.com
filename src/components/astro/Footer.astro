---
import Analytics from './Analytics.astro'
import SocialLinkGithub from './SocialLinkGithub.astro'
import SocialLinkTwitter from './SocialLinkTwitter.astro'

const today = new Date()
const fullYear = today.getFullYear()
---

<footer class="flex flex-col min-h-16 grow pt-6 pb-8 gap-y-2 items-center justify-center self-stretch">
  <div class="flex gap-x-4">
    <SocialLinkTwitter />
    <SocialLinkGithub />
  </div>
  <p class="text-sm text-center">&copy; {fullYear} Colin Teahan.<br /><span class="text-xs">All rights reserved.</span></p>
  <!-- perform some simple analytics tracking -->
  <Analytics />
</footer>
<style>
  footer {
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
    min-height: 80px;
    margin: 0;
  }
</style>
