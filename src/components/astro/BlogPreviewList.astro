---
import { type Blog } from '@/types'
import BlogItem from './BlogItem.astro'

interface Props {
  posts: Blog[]
}

const { posts } = Astro.props

---
<ul class="flex flex-col flex-1 max-w-screen-xl gap-8">
  {
    posts.map(({ data, filePath }) => (
      <BlogItem data={data} slug={data.slug} />
    ))
  }
</ul>