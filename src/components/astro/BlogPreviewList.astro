---
import { type AstroBlogItem } from '@/types'
import BlogItem from './BlogItem.astro'

interface Props {
  posts: AstroBlogItem[]
}

const { posts } = Astro.props

---
<ul class="flex flex-col flex-1 max-w-screen-xl gap-8">
  {
    posts.map(({ slug, data }) => (
      <BlogItem data={data} slug={slug} />
    ))
  }
</ul>