---
import * as Lucide from 'lucide-react'

interface Props {
  title: string
  description: string
  icon?: typeof Lucide.Newspaper
}

const { title, description, icon: SectionIcon = Lucide.FileWarning } = Astro.props

---
<section class="flex flex-col gap-y-8 py-16">
  <div class="text-center flex flex-col items-center">
    <SectionIcon className="text-7xl text-gray-300" size={96} />
    <h1 class="text-7xl font-bold my-4">{title}</h1>
    <p class="text-lg text-gray-500">
      {description}
    </p>
  </div>
  <div class="h-[1px] bg-gray-200 w-full" />
  <div class="px-2">
    <slot />
  </div>
</section>