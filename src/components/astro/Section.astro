---
import * as Lucide from 'lucide-react'
import HashTags from './HashTags.astro'

interface Props {
  title: string
  description: string
  icon?: typeof Lucide.Newspaper
  anchorTag?: string
  hashTags?: string | undefined
}

const { title, anchorTag, description, hashTags = undefined, icon: SectionIcon = Lucide.FileWarning } = Astro.props
---

<section class="pt-8 pb-4 md:pt-12 md:pb-6" id={anchorTag}>
  <!-- Header - Always centered -->
  <header class="text-center px-4 mb-8 md:mb-12">
    <!-- Icon -->
    <SectionIcon className="mx-auto text-gray-200 mb-2 md:mb-4" size={48} strokeWidth={2.5} />

    <!-- Title -->
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
      {title}
    </h1>

    <!-- Description -->
    <p class="mt-2 text-gray-400 text-base md:text-lg max-w-md mx-auto">
      {description}
    </p>

    <!-- Filters -->
    {
      hashTags && (
        <div class="mt-6 flex flex-col items-center gap-3">
          <HashTags hashTags={hashTags} className="justify-center" />
          <a
            href="/blog"
            class="text-sm text-gray-400 hover:text-accent transition-colors underline underline-offset-4"
          >
            Clear filters
          </a>
        </div>
      )
    }
  </header>

  <!-- Divider -->
  <hr class="border-b-none border-t w-full max-w-3xl mx-auto border-t-gray-200" />

  <!-- Content -->
  <div class="pt-6 md:pt-10">
    <slot />
  </div>
</section>
