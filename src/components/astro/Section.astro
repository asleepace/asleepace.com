---
import * as Lucide from 'lucide-react'
import HashTags from './HashTags.astro'

interface Props {
  title: string
  description: string
  icon?: typeof Lucide.Newspaper
  anchorTag?: string
  hashTags?: string | undefined
}

const {
  title,
  anchorTag,
  description,
  hashTags = undefined,
  icon: SectionIcon = Lucide.FileWarning,
} = Astro.props
---

<section class="flex flex-col gap-y-16 pt-16" id={anchorTag}>
  <div class="text-center flex flex-col items-center">
    <SectionIcon className="text-7xl text-gray-300" size={96} />
    <h1 class="text-7xl font-bold my-4">{title}</h1>
    <p class="text-lg text-gray-500">
      {description}
    </p>
    { hashTags && <HashTags hashTags={hashTags} className='pt-6' /> }
    { hashTags && <a class="text-gray-300 hover:text-sky-400 font-bold py-4" href="/blog">Clear Filters</a> }
  </div>
  <div
    class="flex flex-col py-8 md:py-16 border-thin border-gray-200 border-r-transparent border-l-transparent grow bg-[radial-gradient(circle,rgba(0,0,0,0.04),rgba(255,255,255,1))] after:blur-[20px]"
  >
    <slot />
  </div>
</section>
