---
interface Props {
  text?: string
  date: Date
}

const { date } = Astro.props

const dateTime = new Date(date).toISOString()

---

<time datetime={dateTime}>
  {
    new Date(date).toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  }
</time>
