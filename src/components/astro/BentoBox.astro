<div class="p-4">
  <!-- Bento Box Container -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    
    <!-- Featured Box (spans 2 columns on medium screens and up) -->
    <div class="bg-blue-100 p-6 rounded-lg shadow-md md:col-span-2 h-64 flex items-center justify-center">
      <h2 class="text-2xl font-bold">Featured Content</h2>
    </div>
    
    <!-- Sidebar Box -->
    <div class="bg-green-100 p-6 rounded-lg shadow-md h-64 flex items-center justify-center">
      <h2 class="text-xl font-bold">Sidebar</h2>
    </div>
    
    <!-- Small Box 1 -->
    <div class="bg-red-100 p-6 rounded-lg shadow-md h-48 flex items-center justify-center">
      <h2 class="text-lg font-bold">Box 1</h2>
    </div>
    
    <!-- Small Box 2 -->
    <div class="bg-yellow-100 p-6 rounded-lg shadow-md h-48 flex items-center justify-center">
      <h2 class="text-lg font-bold">Box 2</h2>
    </div>
    
    <!-- Small Box 3 -->
    <div class="bg-purple-100 p-6 rounded-lg shadow-md h-48 flex items-center justify-center">
      <h2 class="text-lg font-bold">Box 3</h2>
    </div>
    
    <!-- Wide Box (spans full width) -->
    <div class="bg-indigo-100 p-6 rounded-lg shadow-md col-span-1 md:col-span-3 h-40 flex items-center justify-center">
      <h2 class="text-xl font-bold">Full Width Box</h2>
    </div>
  </div>
</div>