---
import clsx from "clsx"

interface Props {
  textColor?: string
  borderColor?: string
  className?: string
  label: string
}

const { textColor = 'text-zinc-700', borderColor = 'border-zinc-700', className, label } = Astro.props

---

<div aria-label={`${label} Section`}>
  <p aria-label={label} class={clsx(`text-xs font-bold font-mono uppercase rounded-xl tracking-widest inline-block relative top-4 px-2 z-50 bg-zinc-950 ml-6`, textColor)}>{label}</p>
  <div class={clsx(`flex flex-col rounded-2xl border-2 border-solid`, borderColor, className)}>
    <div class="flex flex-col gap-y-2 p-1 mt-3 pt-0 grow overflow-auto w-full scrollbar-none shadow-inner-lg scrollbar-none">
      <slot />
    </div>
  </div>
</div>