---
import FormattedDate from "./FormattedDate.astro"

// =====================================
// Hero Title
// =====================================

interface Props {
  title: string
  pubDate: Date
  updatedDate?: Date
}

const { title, pubDate, updatedDate } = Astro.props

---
<div class="text-center self-stretch px-4 flex flex-col gap-y-2 pt-4 md:pt-8">
  <div class="date text-gray-500">
    <FormattedDate date={pubDate} />
    {
      updatedDate && (
        <div class="italic">
          Last updated on <FormattedDate date={updatedDate} />
        </div>
      )
    }
  </div>
  <p class="text-5xl text-balance font-black mb-2">{title}</p>
  <hr class="border-b-none border-t-[1px] w-full border-t-gray-200 my-4 mb-8 md:my-8" />
</div>