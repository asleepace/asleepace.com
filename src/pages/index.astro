---
import BaseHead from '@/components/astro/BaseHead.astro'
import Header from '@/components/astro/Header.astro'
import Footer from '@/components/astro/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '@/consts'
import MainFeed from '@/components/feed/MainFeed'
import Showcase from '@/components/showcase/Showcase'

const showcaseUrls = [
  "https://soladex.co",
  "https://consoledump.io",
  "https://polyblog.net",
  "https://patrick-teahan.com",
  "https://lams-kitchen.com",
  "https://dlabs.me"
]

---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header title={SITE_TITLE} />
    <main class="flex flex-col flex-grow max-w-screen-lg mx-auto px-4">
      <Showcase urls={showcaseUrls} client:load />
      <MainFeed />
    </main>
    <Footer />
  </body>
</html>
