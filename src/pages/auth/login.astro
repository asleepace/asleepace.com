---
import SiteContainer from '../../layouts/SiteContainer.astro';
---

<SiteContainer title="Login" description="Login to your account.">
  <form id="login-form" hx-post="/api/auth" hx-target="this">
    <h3>🔐</h3>
    <h1>Login</h1>
    <input type="email" id="email" name="email" placeholder="email or username"/>
    <input type="password" id="password" name="password" placeholder="password" />
    <button type="submit">Login</button>
    <a href="/register">forgot username or password</a>
  </form>
</SiteContainer>