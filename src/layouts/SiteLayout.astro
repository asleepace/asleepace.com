---
import BaseHead from '@/components/astro/BaseHead.astro'
import Footer from '@/components/astro/Footer.astro'
import PageNavigation from '@/components/astro/PageNavigation.astro'
import { siteConfig } from '@/consts'
import type { TransitionAnimationValue } from 'astro'
import clsx from 'clsx'

interface Props {
  title?: string
  description?: string
  image?: string
  className?: string
  transition?: TransitionAnimationValue
  htmx?: boolean
}

const {
  title = 'Asleepace',
  description = 'My personal website for everything & anything.',
  className,
  image = siteConfig.coverImage,
  transition = 'initial',
  htmx = false,
} = Astro.props
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="initial">
  <head>
    <BaseHead title={title} description={description} image={image} htmx={htmx} />
  </head>
  <body class="min-h-screen min-w-[320px] flex flex-col overflow-x-hidden">
    <PageNavigation />
    <main class={clsx('flex-1 w-full flex flex-col items-center', className)} transition:animate={transition}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
