---
import type { CollectionEntry } from 'astro:content'
import HeroImage from '@/components/astro/HeroImage.astro'
import HeroTitle from '@/components/astro/HeroTitle.astro'
import Prose from '@/components/astro/Prose.astro'
import SiteLayout from './SiteLayout.astro'
import PageMetrics from '@/components/astro/PageMetrics.astro'

type Props = CollectionEntry<'blog'>['data']

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  hashTags = '',
} = Astro.props
---

<SiteLayout
  title={title}
  description={description}
  image={heroImage}
  transition={'initial'}
  htmx={true}
>
  <article
    class="flex flex-col items-center w-full max-w-screen-md text-gray-800 md:pt-16 pb-8"
  >
    <HeroImage src={heroImage} alt={title} />
    <HeroTitle
      title={title}
      pubDate={pubDate}
      updatedDate={updatedDate}
      hashTags={hashTags}
    />
    <Prose>
      <slot />
    </Prose>
  </article>
  <PageMetrics class='self-center shrink flex pb-8' />
</SiteLayout>
