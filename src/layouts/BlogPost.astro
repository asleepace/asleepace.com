---
import type { CollectionEntry } from 'astro:content'
import HeroImage from '@/components/astro/HeroImage.astro'
import HeroTitle from '@/components/astro/HeroTitle.astro'
import Prose from '@/components/astro/Prose.astro'
import SiteLayout from './SiteLayout.astro'
import { PageMetrics } from '@/components/blog/PageMetrics'

type Props = CollectionEntry<'blog'>['data']

const { title, description, pubDate, updatedDate, heroImage, hashTags = '' } = Astro.props
---

<SiteLayout title={title} description={description} image={heroImage} transition={'initial'} htmx={true}>
  <article class="flex flex-col items-center w-full max-w-3xl text-gray-800 md:pt-16 pb-8">
    <HeroImage src={heroImage} alt={title} />
    <HeroTitle title={title} pubDate={pubDate} updatedDate={updatedDate} hashTags={hashTags} />
    <Prose>
      <slot />
    </Prose>
  </article>
  <PageMetrics className="mb-8" client:load />
</SiteLayout>
