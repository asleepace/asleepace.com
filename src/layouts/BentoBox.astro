---
import FeaturedCard from '@/components/astro/FeaturedCard.astro'
import HoverCard from '@/components/astro/HoverCard.astro'
import { getRecentReports } from '@/lib/db/daily-reports'
import clsx from 'clsx'
import { BoxIcon, LinkIcon, RssIcon, CodeXml } from 'lucide-react'
import { TrendingUp } from 'lucide-react'

export const prerender = false

// set page cache for ~1 min
Astro.response.headers.set('Cache-Control', 'public, max-age=60, s-maxage=60')

export type FeedItem = {
  href: string
  name: string
  date: Date
}

export type WebsiteItem = {
  href: string
}

interface Props {
  className: string
  featured: Blog
  feed: FeedItem[]
}

const { featured, feed, className: classList } = Astro.props

const featuredImage = featured.data.heroImage

export type LinkItem = {
  name: string
  icon: typeof BoxIcon | typeof LinkIcon | typeof RssIcon
  tint: string
  href: string
}

const dailyReports = await getRecentReports({ limit: 2 })

const dailyReportFeed: FeedItem[] = dailyReports.map((report): FeedItem => {
  const titleDate = report.market_date.toLocaleDateString('en-US', {
    timeZone: 'America/New_York',
    dateStyle: 'medium',
  })
  return {
    date: new Date(report.market_date),
    href: `/daily-report?date=${report.market_date.toISOString().split('T')[0]}`,
    name: `The Daily Report â€¢ ${titleDate}`,
  }
})

feed.unshift(...dailyReportFeed)
---

<div class={clsx('p-4', classList)}>
  <!-- Bento Box Container -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <!-- Featured Box (spans 2 columns on medium screens and up) -->
    <FeaturedCard
      href={`/blog/${featured.id}`}
      image={featuredImage}
      name={featured.data.title}
      info={featured.data.description}
    />

    <!-- Activity Feed (now spans 2 rows) -->
    <div class="bg-zinc-900 p-6 rounded-2xl md:row-span-2 h-96 overflow-y-auto flex flex-col">
      <h2 class="text-xl text-green-400 font-bold mb-4">Activity Feed</h2>
      <div class="h-1 bg-zinc-700"></div>
      <div class="flex-1 overflow-auto inset-1 scrollbar-hidden">
        {
          feed.map((item) => {
            return (
              <a
                class="flex gap-x-4 flex-row hover:text-yellow-500 transform duration-300 opacity-60 hover:opacity-100 justify-between pt-4"
                href={item.href}
              >
                <p class="text-sm hover:text-yellow-500 font-normal text-white line-clamp-1">{item.name}</p>
                <p class="text-xs text-white/30">{item.date.toLocaleDateString()}</p>
              </a>
            )
          })
        }
      </div>
    </div>

    <!-- Wide Box (spans full width) -->
    <div class="col-span-1 md:col-span-3 md:h-64 flex flex-col md:flex-row items-center gap-4 justify-center">
      <!-- widget card -->
      <HoverCard href="/code" alt="Online Code Editor" class:list="md:basis-1/3 aspect-video">
        <div
          class="p-6 flex flex-col flex-1 h-full bg-sky-400 scale-100 hover:scale-110 transition-transform duration-500"
        >
          <div class="flex flex-1 pt-6 flex-col items-center gap-y-4 justify-center">
            <CodeXml size="64" color="white" client:load />
            <p class="text-3xl">Code Editor</p>
          </div>
        </div>
      </HoverCard>
      <!-- Daily Report Card -->
      <HoverCard href={`/daily-report`} alt="Daily Report" class:list="md:basis-1/3 aspect-video">
        <div
          class="p-6 flex flex-col flex-1 h-full bg-indigo-400 scale-100 hover:scale-110 transition-transform duration-500"
        >
          <div class="flex flex-1 pt-6 flex-col items-center gap-y-4 justify-center">
            <TrendingUp size="64" color="white" client:load />
            <p class="text-3xl">Daily Report</p>
          </div>
        </div>
      </HoverCard>
      <!-- about me card -->
      <HoverCard
        href="/about"
        alt="About Colin Teahan"
        image="/images/about-me.jpeg"
        class:list="md:basis-1/3 aspect-video"
      >
        <p class="p-6 from-black/10 via-black/0 to-transparent bg-linear-to-br">About</p>
      </HoverCard>
    </div>
  </div>
  <style define:vars={{ featuredImage }}>
    #bento-featured {
      background-image: url(featuredImage);
      background-position: center;
      background-size: cover;
    }
  </style>
</div>
