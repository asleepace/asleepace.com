{
  "files.associations": {
    "*.css": "tailwindcss",
    "*.mdx": "mdx"
  },
  "emmet.includeLanguages": {
    "mdx": "jsx"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.formatOnSaveMode": "file",
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.format.semicolons": "remove",
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "editor.formatOnSave": true,
  "cSpell.ignoreWords": [
    "Astro",
    "Codespaces",
    "Elysia",
    "asleepace",
    "astrojs",
    "bunx",
    "changefreq",
    "classNames",
    "consts",
    "elysiajs",
    "frontmatter",
    "htmx",
    "lastmod",
    "mkdir",
    "outdir",
    "preact",
    "rgb",
    "rgba",
    "rngs",
    "tailwindcss",
    "tsconfigs"
  ],
  "cSpell.words": [
    "Ballin",
    "beara",
    "Bento",
    "bidi",
    "clsx",
    "extar",
    "grayscale",
    "KHTML",
    "lucide",
    "mailgod",
    "nanostores",
    "ncdu",
    "nilly",
    "nowrap",
    "oklch",
    "overscroll",
    "palenight",
    "Prerendered",
    "resizer",
    "Segoe",
    "smushed",
    "Substree"
  ]
}
