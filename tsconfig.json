{
  "extends": "astro/tsconfigs/strict",
  "content": ["src/**/*.{js,jsx,ts,tsx,mdx}"],
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/lib/*": ["src/lib/*"],
    },
  }
}